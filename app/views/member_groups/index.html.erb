<div class="row justify-content-center">
  <div class="col col-596 pt-5">
    <div class="col-xs-12 mb-3">
      <div class="sc-bIqbHp iHjchW"><%= @member_groups.size %> <%= t "member" %></div>
    </div>
    <div class="border-bottom-group my-2"></div>
    <div class="sc-cBrjTV hvPnFo"><%= t "manager" %></div>
    <div class="col-xs-12 request-join-card">
      <div class="d-flex align-items-center">
        <div class="gapo-avatar gapo-avatar--64">
          <% if @group.user.avatar.attached? %>
            <%= image_tag @group.user.avatar, class: "w-100" %>
          <% else %>
            <%= image_tag "man.svg", class: "w-100" %>
          <% end %>
        </div>
        <h5 class="font-weight-bold pl-3"><%= @group.user.name %></h5>
      </div>
    </div>
    <div class="sc-cBrjTV hvPnFo"><%= t "member" %></div>
    <% @member_groups.each do |member| %>
      <div class="col-xs-12 request-join-card">
        <div id="member_<%= member.id %>">
          <%= render "member", member: member, group: @group %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col col-368 pt-5" id="remove_member">
    <%= render "member_request", group: @group, member_requests: @member_groups_waitings %>
  </div>
</div>
